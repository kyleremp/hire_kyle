<%= link_to("<<Back", {:controller => 'jobs', :action => 'manage'}) %>
<h1>Create a new job</h1>

	<%=form_for(:job, :url => {:controller => 'jobs', :action => 'create'}) do |f| %>
	<table>
		<tr>
			<td>Title: </td>
			<td><%= f.text_field(:title) %></td>
		</tr>
		<tr>
			<td>Description</td>
			<td><%= f.text_area(:description) %></td>
		</tr>
		<tr>
			<td colspan="2"><%= f.submit("Add Job") %></td>
		</tr>
	</table>
	<% end %> 